@using ImageContestSystem.Web.Models.ViewModels
@model ContestParticipantViewModel

<div class="well well-bg" style="border: 1px solid gray">
    <div>
        <strong>Description: </strong>@Model.Description
    </div>
    <div><strong>Created by: </strong> @Html.ActionLink(@Model.Creator, "View", "Users", new { username = @Model.Creator }, new { title = "View profile" })</div>
    <div>
        <strong>Started: </strong>@Model.CreatedOn
    </div>
    <div><strong>Finishes: </strong>@Model.ClosesOn</div>
    <div>
        <strong>Photos: </strong>
        <div class="row">
            @foreach (var photo in @Model.Pictures)
            {
                @Html.DisplayFor(p => photo)
            }
        </div>
    </div>
</div>