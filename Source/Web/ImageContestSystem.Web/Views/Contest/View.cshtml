@model ImageContestSystem.Web.Models.ViewModels.ContestViewModel

@{
    ViewBag.Title = "View contest";
}

<h2>Contest</h2>

<div class="well well-lg">
    <div class="form-group">Title: @Model.Title</div>
    <div class="form-group">Description: @Model.Description</div>
    <div class="form-group">Count of participants: @Model.CountOfParticipants</div>
    <div class="form-group">Number of Allowed participants: @Model.NumberOfAllowedParticipants</div>
    <div class="form-group">Closes on: @Model.ClosesOn</div>
    <div class="form-group">Participation Strategy: @Model.ParticipationStrategy</div>
    @if (Model.ParticipationStrategy == 0)
    {
        <button class="btn btn-group">Join</button>
    }
</div>